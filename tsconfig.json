{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "outDir": "./build",
    "target": "es2015",
    "lib": ["ES2020"],
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
